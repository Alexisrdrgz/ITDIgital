---
import { urlForImage } from "../sanity/urlForImage";
import PageWrapper from "../layouts/PageWrapper.astro";
import { useSanityClient } from "astro-sanity";

type Post = {
  title: string;
  slug: { current: string };
  mainImage: {
    _type: "image";
    asset: {
      _ref: string;
      _type: string;
    };
  };
};

const posts = await useSanityClient().fetch(`*[_type == "post"]`);
---

<style>
  .page-title {
    margin: 4rem 0 1rem;
  }

  .blogs-list {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1rem;
  }

  .blog-post {
    text-decoration: none;
    color: unset;
    overflow: hidden;
  }

  .blog-image {
    width: 100%;
    scale: 1.1;
    object-fit: cover;
  }

  .blog-title {
    font-size: 18px;
    transition: all 0.3s ease;
    font-weight: 500;
  }

  .blog-post:hover .blog-title {
    transform: translateY(-4px);
  }
</style>

<PageWrapper title="Home" description="Blog home page">
  <div class="container">
    <h1 class="page-title">Blogs</h1>
    {
      posts && (
        <div class="blogs-list">
          {posts.map((post: Post) => (
            <a class="blog-post" href={`post/${post.slug.current}`}>
              <img
                class="blog-image"
                src={`${urlForImage(post.mainImage.asset).format("webp").url()}`}
                alt="Blog image"
              />
              <h2 class="blog-title">{post.title}</h2>
            </a>
          ))}
        </div>
      )
    }
  </div>
</PageWrapper>
